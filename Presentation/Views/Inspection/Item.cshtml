@model IEnumerable<Presentation.ViewModels.Grouped>

    <div class="workordertitle">
        List
    </div>
<table class="table table_container">
    <tbody>
        @foreach (var location in Model)
        {    <tr>
        <td></td><td></td><td></td>
            </tr>
            <tr>
                <td>
                   <b> @Html.DisplayFor(modelItem => location.LocationName)</b>
                </td>

                <td colspan="2">
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @if (location.Order == 1)
                    {
                        @Html.ActionLink("Move Down", "Down", new { InspectionId = location.InspectionId, LocationId = location.LocationId })
                    }
                    else
                    {
                        @Html.ActionLink("Move Up", "Up", new { InspectionId = location.InspectionId, LocationId = location.LocationId })
                    }
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <table class="table">
                       
                        @foreach (var item in location.Items)
                        {  
                            <tr>
                                <td colspan="2">@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>
                                    @if (item.Order ==1)
                                    {
                                        @Html.ActionLink("Move Down", "Down", new { InspectionId = location.InspectionId, itemId = item.Id })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Move Up", "Up", new { InspectionId = location.InspectionId, itemId = item.Id })
                                    }
                                </td>
                            </tr>

                        }
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
