@model Presentation.ViewModels.LoginReq
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <nav class="navbar bg-success mb-3 fixed-top">
        <div class="d-inline-flex w-100">
            <a style="color:white" asp-action="Index" asp-controller="Login" class="nav-link"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></a>
            <div class="container-block justify-content-center">
                <span class="nav-link justify-content-end" style="color:white;font-size:1.5em;">Password Change</span>
            </div>
        </div>
    </nav>
</header>

<form class="mform" asp-action="SendEmailForPasswordReset" asp-controller="Login" style="padding-left:10px;padding-right:10px;">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="abc@@xyz.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Link for Password Change" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@if (TempData.ContainsKey("Error") || TempData.ContainsKey("Success"))
{
    var key = TempData.ContainsKey("Error") ? "Error" : TempData.ContainsKey("Success") ? "Success" : "Info";

<script>
     alertify.alert('@key', '<p>@TempData[key]</p>', function () { });
</script>
}