@model Presentation.ViewModels.LoginReq
@inject IDeviceResolver device
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Change Password</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendEmailForPasswordReset" asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="abc@@xyz.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Link for Password Change" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:history.back()">Back</a>
</div>
@if (TempData.ContainsKey("Error") || TempData.ContainsKey("Success"))
{
    var key = TempData.ContainsKey("Error") ? "Error" : TempData.ContainsKey("Success") ? "Success" : "Info";

<script>
     alertify.alert('@key', '<p>@TempData[key]</p>', function () { });
</script>
}