@model CreateWorkOrder
<partial name="_ValidationScriptsPartial">

    <div class="workordertitle">
        New Work Order
    </div>
    <form class="form" enctype="multipart/form-data" id="wocreate" asp-action="CreateWO" asp-controller="WorkOrder">
@if (Model == null)
{
    <p>No Record Found</p>
}
else
{
        <table class="table table_container">
            <tbody>
                <tr>
                    <td>
                        <div class="col">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="Property"> </label>
                                </div>
                                <div class="col">
                                    <select class="form-control form-control-sm custom-input" asp-for="Property" asp-items="@(new SelectList(Model.Properties, "Id", "PropertyName"))">
                                        <option value="">Please select Property</option>
                                    </select>
                                    <span asp-validation-for="Property" class="text-danger"></span>
                                </div>
                            </div>
                            @if (Model.Location != null && Model.Location.Any())
                            {
                                <div class="row top-buffer">
                                    <div class="col-md-3">
                                        <label asp-for="Location"> </label>
                                    </div>
                                    <div class="col">
                                        <select class="form-control form-control-sm custom-input" asp-for="LocationId" asp-items="@(new SelectList(Model.Location, "Id", "PropertyName"))">
                                            <option value="">Please select Location</option>
                                        </select>
                                        <span asp-validation-for="LocationId" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                                <div class="row top-buffer">
                                    <div class="col-md-3">
                                        <label for="AreaId">Area</label>
                                    </div>
                                    <div class="col">
                                        <select class="form-control form-control-sm custom-input" asp-for="AreaId">
                                            <option value="">Please select Area</option>
                                        </select>
                                        <span asp-validation-for="AreaId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="col">
                            @if (Model.Items != null && Model.Items.Any())
                            {
                                <div class="row">
                                    <div class="col-md-3">
                                        <label asp-for="Item"> </label>
                                    </div>
                                    <div class="col">
                                        <select class="form-control form-control-sm custom-input" asp-for="Item" asp-items="@(new SelectList(Model.Items, "Id", "PropertyName"))">
                                            <option value="">Please select one</option>
                                        </select>
                                        <span asp-validation-for="Item" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                            @if (Model.Issues != null && Model.Issues.Any())
                            {
                                <div class="row top-buffer">
                                    <div class="col-md-3">
                                        <label asp-for="Issue"> </label>
                                    </div>
                                    <div class="col">
                                        <select class="form-control form-control-sm custom-input" asp-for="Issue" asp-items="@(new SelectList(Model.Issues, "Id", "PropertyName"))">
                                            <option>Please select one</option>
                                        </select>
                                        <span asp-validation-for="Issue" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="col">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="Description"> </label>
                                </div>
                                <div class="col">
                                    <textarea class="form-control custom-input" asp-for="Description" placeholder="additional Details"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row top-buffer">
                                <div class="col-md-3">
                                    <label for="DueDate">Due Date</label>
                                </div>
                                <div class="col">
                                    <input class="form-control custom-input" asp-for="DueDate" >
                                    <span asp-validation-for="DueDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="col">
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Assign To </label>
                                </div>

                                <div class="col">
                                    @if (Model.Departments != null && Model.Departments.Any())
                                    {
                                        <select class="form-control form-control-sm custom-input" asp-for="Department" asp-items="@(new SelectList(Model.Departments, "Id", "PropertyName"))">
                                            <option value="">Department</option>
                                        </select>
                                        <span asp-validation-for="Department" class="text-danger"></span>
                                    }
                                </div>
                                <div class="col">
                                    <select class="form-control form-control-sm custom-input" asp-for="Section">
                                        <option value="">Section</option>
                                    </select>
                                    <span asp-validation-for="Section" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row top-buffer">
                                <div class="col-md-3">
                                    <label for="File">Attachment</label>
                                </div>
                                <div class="col">
                                    <div class="cont">
                                        <label class="browsebutton">Browse File</label>
                                        <input asp-for="File" accept="image/*,.pdf,.xls,.xlx,.doc,.docx" class="form-control-sm custom-input Photo">
                                    </div>
                                    <span class="text-danger">supported formats: .jpg, .jpeg, .png, .pdf, .xls, .xlx, .doc, .docx </span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        <hr />
        <button type="submit" data-toggle="modal" data-target=".bd-example-modal-lg" class="btn btn-sm btn-primary submit">Create</button>
        @*passing data to controller*@
}
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <script>
        $('#LocationId').change(function () {
            $.get('@Url.Action("GetArea","WorkOrder")' + "?id=" + $(this).val(),
                function (data) {
                    $("#AreaId").html("<option value=''>Please select Area</option>")
                    if (data != null || data != undefined) {
                        for (var i = 0; i < data.length; i++) {
                            $("#AreaId").append('<option value=' + data[i].id + '>' + data[i].propertyName + '</option>')
                        }
                    }
                });
        });
        $('#Property').change(function () {
            console.log($(this).val());
            $.get('@Url.Action("GetLocation","WorkOrder")' + "?id=" + $(this).val(),
                function (data) {
                    $("#LocationId").html("<option value=''>Please select Location</option>")
                     $("#AreaId").html("<option value=''>Please select Area</option>")
                    if (data != null || data != undefined) {
                        for (var i = 0; i < data.length; i++) {
                            $("#LocationId").append('<option value=' + data[i].id + '>' + data[i].propertyName + '</option>')
                        }
                    }
                });
         });
         $('#Department').change(function () {
            console.log($(this).val());
            $.get('@Url.Action("GetSection","WorkOrder")' + "?id=" + $(this).val(),
                function (data) {
                    console.log(data);
                    if (data != null || data != undefined) {
                         $("#Section").html("<option value=''>Section</option>")
                        for (var i = 0; i < data.length; i++) {
                            $("#Section").append('<option value=' + data[i].id + '>' + data[i].propertyName + '</option>')
                        }
                    }
                });
         });
         $('#Property').change(function () {
            console.log($(this).val());
            $.get('@Url.Action("GetLocation","WorkOrder")' + "?id=" + $(this).val(),
                function (data) {
                    console.log(data);
                    if (data != null || data != undefined) {
                         $("#Location").html("<option value=''>Section</option>")
                        for (var i = 0; i < data.length; i++) {
                            $("#Location").append('<option value=' + data[i].id + '>' + data[i].propertyName + '</option>')
                        }
                    }
                });
         });
    </script>