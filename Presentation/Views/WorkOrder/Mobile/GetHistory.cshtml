@model List<HistoryDetail>
@{
    ViewData["Title"] = "Work Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <nav class="navbar bg-success mb-3 fixed-top">
        <div class="d-inline-flex w-100">
            <a style="color:white" href="javascript:history.back()"  class="nav-link"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></a>
            <div class="container-block justify-content-center">
                <span class="nav-link justify-content-end" style="color:white;font-size:1.5em;">History</span>
            </div>
        </div>
    </nav>
</header>
<div class="mform" style="padding-left:5px;padding-right:5px;">
    <hr />

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table_container historyview table-responsive-lg">

            <thead>
                <tr>
                    <th>
                        Property Name
                    </th>
                    <th>
                        Old Value
                    </th>
                    <th>
                        New Value
                    </th>
                    <th>
                        Comment
                    </th>

                    <th>
                        Updated By
                    </th>
                    <th>
                        Updated Time
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.PropertyName
                    </td>
                    <td>
                        @item.OldValue
                    </td>
                    <td>
                        @item.NewValue
                    </td>
                    <td>
                        @item.Comment
                    </td>
                    <td>
                        @item.UpdatedBy
                    </td>
                    <td>
                        @item.UpdateTime
                    </td>

                </tr>
            }
        </table>
    }
</div>
