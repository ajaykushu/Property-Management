@model dynamic


   <tr>
        <th>
            Recurrence Pattern
        </th>
    </tr>
    <tr>
        <td >
            <section id="Select-Main-Type">
               
            <div class="row padding">
                <select class="form-control form-control" checked id="type-select" name="type-select" value="Daily">
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                    <option value="Yearly">Yearly</option>
                </select>
            </div>
            </section>
        </td>
      </tr>
<tr>
    </tr>
      <tr>
        <td >
            <section id="Monthly" style="display:none">

                <div class="form-check row ml-1 padding">
                    <input class="form-check-input" type="radio" id="monthly-sub-section-1" name="sub-radio" value="Day" checked>
                    <label class="form-check-label" for="day">Day</label>
                </div>

                <section class="monthly-sub-section-1">
                    <div class="form-group row top-buffer padding">
                        <input class="form-control form-control" min="1" max="31" type="number" id="day" placeholder="Of Every Day">
                        <input class="form-control form-control top-buffer" placeholder="Of Every Month" min="1" max="12" type="number" id="month">
                    </div>
                </section>

                <div class="form-check row ml-1 top-buffer padding">
                    <input class="form-check-input" type="radio" id="monthly-sub-section-2" name="sub-radio" value="Month">
                    <label class="form-check-label" for="select-month">The</label>
                </div>

                <section class="monthly-sub-section-2">
                    <div class="form-group row top-buffer padding">
                        <select class="form-control form-control" type="text" id="select-day-option">
                            <option value="1">First</option>
                            <option value="2">Second</option>
                            <option value="3">Third</option>
                            <option value="4">Fourth</option>
                            <option value="L">Last</option>
                        </select>
                    </div>
                    <div class="form-group row top-buffer padding">
                        <select class="form-control form-control" type="text" id="select-week-option">
                            <option value="Mon">Monday</option>
                            <option value="Tue">Tuesday</option>
                            <option value="Wed">Wenesday</option>
                            <option value="Thu">Thursday</option>
                            <option value="Fri">Friday</option>
                            <option value="Sat">Saturday</option>
                            <option value="Sun">Sunday</option>
                        </select>
                        <input class="form-control top-buffer form-control" placeholder="Of Every Month" min="1" max="12" type="number" id="input-month">
                    </div>
                </section>
            </section>

            
            <section id="Daily">
               
                    <div class="form-check row ml-1 padding">
                        <input class="form-check-input" name="sub-radio" type="radio" id="daily-sub-section-1" value="Every" checked>
                        <label class="form-check-label" for="daily-type-select2">Every</label>
                    </div>
                <section class="daily-sub-section-1">
                    <div class="form-group row top-buffer padding">
                        <input class="form-control form-control" id="daily-occurence" placeholder="Day(s)" type="number" min="1" max="90">
                    </div>
                
               </section>
                    <div class="form-check row ml-1 top-buffer padding">
                        <input class="form-check-input" name="sub-radio" type="radio" id="daily-sub-section-2" value="Weekdays">
                        <label class="form-check-label" for="daily-type-select2">Every weekday</label>
                    </div>
                </section>
                <section id="Yearly" style="display:none">
                    <label class="col-form-label">Recur year(s) on:</label>
                    <br />
                    <div class="form-group row top-buffer padding">
                        <label class="year-month-day">Day</label>
                        <input type="number" id="year-day" min="1" max="31" class="form-control form-control">
                    </div>
                    <div class="form-group row top-buffer padding">
                        <label for="year-month">Month</label>
                        <input type="number" id="year-month" class="form-control form-control" min="1" max="12">
                    </div>


                </section>
                <section id="Weekly" style="display:none">
                    <label class="col-form-label" for="select-week">Recur every week(s) on:</label>
                    <div class="pt-2 pl-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="1">
                            <label class="form-check-label" for="exampleCheck1">Monday</label>
                        </div>
                        <div class="form-check ">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="2">
                            <label class="form-check-label" for="exampleCheck1">Tuesday</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="3">
                            <label class="form-check-label" for="exampleCheck1">Wednesday</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="4">
                            <label class="form-check-label" for="exampleCheck1">Thursday</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="5">
                            <label class="form-check-label" for="exampleCheck1">Friday</label>

                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="6">
                            <label class="form-check-label" for="exampleCheck1">Saturday</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="exampleCheck1" value="7">
                            <label class="form-check-label" for="exampleCheck1">Sunday</label>
                        </div>

                    </div>
                </section>
</td>
    </tr>
    
    <tr>
        <th>
          Range Of Recurrence
        </th>
    </tr>
    <tr>
        <td>
            <div class="form-group row padding">
                <label for="select-start-date">Start:</label>
                @{ var date = Convert.ToDateTime(Model.RecurringStartDate).ToString("yyyy-MM-dd");
                   date = Model.RecurringStartDate!=null?date: null;
                }
                @Html.TextBox("RecurringStartDate", date, null, new { @type = "date", @class = "form-control form-control", @min = DateTime.Now.ToString("yyyy-MM-dd") })


              
            </div>
           
            <div class="form-check row padding top-buffer ml-1">
                <input class="form-check-input" checked name="end-select" type="radio" id="end-select" value="Always">
                <label class="form-check-label" for="end-select">No End Date</label>
            </div>
            <div class="form-check row padding top-buffer ml-1">
                <input class="form-check-input" name="end-select" type="radio" id="end-select2" value="weekly">
                <label class="form-check-label" for="end-select2">End After</label>
            </div>
            <section class="end-select2">
                <div class="form-group row padding top-buffer">
                    @if (Model.EndAfterCount != null)
                    {
                        @Html.TextBox("EndAfterCount", (int)Model.EndAfterCount, null, new { @class = "form-control form-control", @min = 1 })
                    }
                    else
                    {
                        <input class="form-control form-control" min="1" type="number" id="EndAfterCount" name="EndAfterCount" placeholder="Occurrences">
                    }
                </div>
                </section>
                    <div class="form-check row padding top-buffer ml-1">
                        <input class="form-check-input" name="end-select" type="radio" id="end-select3" value="Monthly">
                        <label class="col-form-label" for="end-select3">End By</label>
                    </div>

                    <section class="end-select3">
                        <div class="form-group row padding">
                            @{ var enddate = Convert.ToDateTime(Model.RecurringEndDate).ToString("yyyy-MM-dd");
                                date = Model.RecurringEndDate != null ? date : null;
                            }
                            @Html.TextBox("RecurringEndDate",enddate, null, new { @class = "form-control form-control", @min =date??DateTime.Now.ToString("yyyy-MM-dd"), @disabled = true, @type = "date" })

                        </div>
                    </section>



</td>
    </tr>


